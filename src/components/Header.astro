---
import AboutIcon from "./icons/AboutIcon.astro";
import ExperiencieIcon from "./icons/ExperiencieIcon.astro";
import ProjectsIcon from "./icons/ProjectsIcon.astro";
import ContactIcon from "./icons/ContactIcon.astro";
---

<header class="fixed w-full max-sm:bottom-0 md:top-0 z-50 py-4 bg-slate-800">
  <nav class="w-full">
    <ul
      class={`flex text-gray-50 w-full justify-around sm:justify-center items-center gap-4 text-sm  sm:text-xl cursor-pointer font-semibold `}
    >
      <li>
        <a
          class="hover:text-amber-500 transition-colors duration-100 ease-in-out"
          href="#about"
        >
          <div class="flex flex-col justify-center items-center">
            <span class="sm:hidden">
              <AboutIcon />
            </span>
            <p>About</p>
          </div>
        </a>
      </li>
      <li>
        <a
          class="hover:text-amber-500 transition-colors duration-100 ease-in-out"
          href="#experiencie"
        >
          <div class="flex flex-col justify-center items-center">
            <span class="sm:hidden">
              <ExperiencieIcon />
            </span>
            <p>Experiencie</p>
          </div>
        </a>
      </li>
      <li>
        <a
          class="hover:text-amber-500 transition-colors duration-100 ease-in-out"
          href="#projects"
        >
          <div class="flex flex-col justify-center items-center">
            <span class="sm:hidden">
              <ProjectsIcon />
            </span>
            <p>Projects</p>
          </div>
        </a>
      </li>
      <li>
        <a
          class="hover:text-amber-500 transition-colors duration-100 ease-in-out"
          href="#contact"
        >
          <div class="flex flex-col justify-center items-center">
            <span class="sm:hidden">
              <ContactIcon />
            </span>
            <p>Contact</p>
          </div>
        </a>
      </li>
    </ul>
  </nav>
</header>
