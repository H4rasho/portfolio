---
import Layout from "../layouts/Layout.astro";
import { Image } from "@astrojs/image/components";
import thomasImage from "../assets/thomas.jpg";
import monogatariApiProject from "../assets/monogatari-quotes.webp";
import Heading from "../components/Heading.astro";
import ExperiencieTimeLine from "../components/ExperiencieTimeLine.astro";
import Github from "../components/icons/Github.astro";
import IconLink from "../components/IconLink.astro";
import Website from "../components/icons/Website.astro";
---

<Layout title="Welcome to Astro.">
  <main class="flex flex-col gap-8 items-center">
    <section class="flex flex-col gap-6">
      <div class="text-right">
        <h1 class="text-3xl">Thomas Sepulveda</h1>
        <Heading title="Fullstack Developer" />
      </div>
      <Image
        src={thomasImage}
        alt="Thomas Sepulveda"
        width={300}
        height={300}
        quality={100}
        class="rounded-full bg-contain"
      />
    </section>
    <section class="flex flex-col gap-4">
      <Heading title="About" />
      <p class="text-xl">
        <span class="text-amber-500 font-bold">+2</span> years of experiencie. Work
        for the solutions, best practice approach, interest in the code architecture.
        Improving my software development vision.
      </p>
    </section>
    <section>
      <Heading title="Experience" />
      <ExperiencieTimeLine />
    </section>
    <section class="flex flex-col gap-4 w-full">
      <Heading title="Projects" />
      <article
        class="flex flex-col justify-center mx-auto gap-4 bg-slate-800 rounded-md w-[300px]"
      >
        <Image
          src={monogatariApiProject}
          alt="Monogatari Quotes API"
          width={300}
          height={300}
          quality={100}
          class="rounded-md bg-contain"
        />

        <h3
          class="text-lg text-center font-semibold text-gray-900 dark:text-white"
        >
          Monogatari Quotes API
        </h3>
        <p class="text-base p-4 font-normal text-gray-500 dark:text-gray-400">
          A simple API to get quotes from the Monogatari Series.
        </p>
        <footer class="flex items-center py-4 px-10 justify-between">
          <IconLink>
            <Github />
            <span>Github</span>
          </IconLink>
          <IconLink>
            <Website />
            <span>Website</span>
          </IconLink>
        </footer>
      </article>
    </section>
  </main>
</Layout>
