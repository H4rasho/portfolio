---
import Header from "../components/Header.astro";

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="H4rasho's (Thomas Sepulveda) portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex px-4 flex-col items-center bg-slate-900 text-white">
    <Header />
    <slot />
  </body>
</html>
